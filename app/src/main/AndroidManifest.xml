<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="ru.newuserkk.timesheet">

    <application
            android:name="ru.newuserkk.timesheet.TimesheetApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="ru.newuserkk.timesheet.presentation.view.role.SelectRoleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <activity
                android:name="ru.newuserkk.timesheet.presentation.view.timekeeper.TimekeeperCalendarActivity"
                android:label="@string/title_activity_timekeeper_calendar">
        </activity>

        <activity
                android:name="ru.newuserkk.timesheet.presentation.view.timekeeper.TimekeeperListActivity"
                android:label="@string/title_activity_timekeeper_list"
                android:parentActivityName="ru.newuserkk.timesheet.presentation.view.timekeeper.TimekeeperCalendarActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ru.newuserkk.timesheet.presentation.view.timekeeper.TimekeeperCalendarActivity"/>
        </activity>

        <activity android:name="ru.newuserkk.timesheet.presentation.view.timekeeper.TimekeeperAddActivity"
                android:label="@string/title_activity_timekeeper_add"
                android:parentActivityName="ru.newuserkk.timesheet.presentation.view.timekeeper.TimekeeperListActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ru.newuserkk.timesheet.presentation.view.timekeeper.TimekeeperListActivity" />
        </activity>


        <activity
                android:name="ru.newuserkk.timesheet.presentation.view.department.DepartmentListActivity"
                android:label="@string/title_activity_department_list"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
                android:name="ru.newuserkk.timesheet.presentation.view.department.DepartmentAddActivity"
                android:label="@string/title_activity_department_add"
                android:parentActivityName="ru.newuserkk.timesheet.presentation.view.department.DepartmentListActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ru.newuserkk.timesheet.presentation.view.department.DepartmentListActivity"/>
        </activity>


        <activity
                android:name="ru.newuserkk.timesheet.presentation.view.employee.EmployeeListActivity"
                android:label="@string/title_activity_employee_list"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
                android:name="ru.newuserkk.timesheet.presentation.view.employee.EmployeeAddActivity"
                android:label="@string/title_activity_add_employee"
                android:parentActivityName="ru.newuserkk.timesheet.presentation.view.employee.EmployeeListActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ru.newuserkk.timesheet.presentation.view.employee.EmployeeListActivity"/>
        </activity>

    </application>
</manifest>